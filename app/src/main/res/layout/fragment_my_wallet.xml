<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/paymentbackground"
    android:gravity="center"
    tools:context="com.example.amal.linkbike.Fragments.MyWallet">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginEnd="30dp"
        android:layout_marginStart="30dp"
        android:orientation="vertical"

        >

        <Space
            android:layout_width="match_parent"
            android:layout_height="140dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="173dp"
            android:gravity="center"
            android:orientation="vertical">


            <TextView
                android:id="@+id/balance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:gravity="center"
                android:paddingTop="10dp"
                android:text="0.00"
                android:textColor="@color/white"
                android:textSize="30sp"
                android:textStyle="bold" />


        </LinearLayout>

        <Space
            android:layout_width="match_parent"
            android:layout_height="21dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            android:weightSum="1">


            <TextView
                android:id="@+id/payment"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginBottom="5dp"
                android:background="@drawable/trans_white_rectangle"
                android:drawableLeft="@drawable/ic_action_payment"
                android:gravity="center|start"
                android:paddingLeft="10dp"
                android:paddingTop="10dp"
                android:text="      My Payment"
                android:textColor="@color/gray" />


            <Space
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_weight="4.15"
                android:background="@color/white" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/cashback"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginBottom="5dp"
                    android:background="@drawable/trans_white_rectangle"
                    android:drawableLeft="@drawable/ic_wallet"
                    android:gravity="center|start"
                    android:paddingLeft="10dp"
                    android:paddingTop="10dp"
                    android:text="  Cashback"
                    android:textColor="@color/gray" />

                <TextView
                    android:id="@+id/cashbackAmount"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:textColor="@color/starBlue"
                    android:layout_alignEnd="@+id/cashback"
                    android:layout_alignRight="@+id/cashback"
                    android:layout_centerInParent="true"
                    android:layout_marginRight="10dp"
                    android:enabled="false" />
            </RelativeLayout>

            <Space
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_weight="4.15"
                android:background="@color/white" />

            <TextView
                android:id="@+id/promotions"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginBottom="5dp"
                android:background="@drawable/trans_white_rectangle"
                android:drawableLeft="@drawable/ic_gift"
                android:gravity="center|start"
                android:paddingLeft="10dp"
                android:paddingTop="10dp"
                android:text="  Promotions"
                android:textColor="@color/gray" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:orientation="vertical">

            <Button
                android:id="@+id/deposit"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:background="@drawable/register_button"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:text="Deposit"
                android:textColor="@color/white"
                android:textStyle="normal"
                android:visibility="gone" />
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
