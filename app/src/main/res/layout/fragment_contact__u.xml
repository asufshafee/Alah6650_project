<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.amal.linkbike.Fragments.MyWallet"
    android:background="@drawable/conactus">

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="50dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="10dp"
            android:orientation="vertical"
            android:weightSum="1"
            >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingEnd="20dp"
                android:paddingStart="20dp"
                android:paddingTop="20dp"
                android:text="Get In Touch"
                android:textColor="@color/white"
                android:textSize="35sp"
                android:textStyle="bold"/>

            <Space
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_weight="0.24" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:paddingEnd="5dp"
                android:paddingStart="5dp"
                android:text="  Amal Alahmadi"
                android:drawableLeft="@drawable/ic_action_person"
                android:textColor="@color/grayLight"
                android:textSize="15sp"
                android:textStyle="bold"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:paddingEnd="5dp"
                android:paddingStart="5dp"
                android:text="  Dr.Chinh Hoang "
                android:drawableLeft="@drawable/ic_action_teacher"
                android:textColor="@color/grayLight"
                android:textSize="15sp"
                android:textStyle="bold"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:paddingEnd="5dp"
                android:paddingStart="5dp"
                android:text="  + 123 321 1234"
                android:drawableLeft="@drawable/ic_action_phon"
                android:textColor="@color/grayLight"
                android:textSize="12sp"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_marginLeft="30dp"
                android:paddingEnd="5dp"
                android:paddingStart="5dp"
                android:text="  	cp670.linkbike@gmail.com"
                android:drawableLeft="@drawable/ic_action_mail"
                android:textColor="@color/grayLight"
                android:textSize="12sp"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="30dp"
                android:drawableLeft="@drawable/ic_action_wlu"
                android:paddingEnd="5dp"
                android:paddingStart="5dp"
                android:text="  WILFRID LAURIER UNIVERSITY"
                android:textColor="@color/grayLight"
                android:textSize="12sp" />
            <Space
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_weight="0.24" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:gravity="center"
                android:text="Send us a Message "
                android:textColor="@color/endBlue"
                android:textSize="17sp"
                android:textStyle="bold" />
            <Space
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_weight="0.24" />

            <EditText
                android:id="@+id/UserMessage"
                android:layout_width="232dp"
                android:layout_height="150dp"
                android:layout_gravity="center"
                android:layout_weight="0.77"
                android:background="@color/white"
                android:gravity="center"

                android:inputType="textMultiLine"
                android:text=""
                android:textColor="@color/blue"
                android:textColorHint="@color/gray"
                android:textSize="12sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/SendEmail"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_gravity="center"
                android:layout_marginBottom="36dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/register_button"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:text="send"
                android:textColor="@color/white"
                android:textStyle="normal"
                />


        </LinearLayout>

    </ScrollView>

</RelativeLayout>
