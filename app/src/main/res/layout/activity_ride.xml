<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_ride"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context="com.example.amal.linkbike.Ride">

    <RelativeLayout
        android:layout_width="match_parent"
        android:background="@drawable/welcomback2"
        android:layout_height="311dp">


        <TextView
            android:text="Enjoy Your Trip!!"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="30dp"
            android:textStyle="bold"
            android:textColor="@color/endBlue"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="77dp"
            android:id="@+id/textView6" />
    </RelativeLayout>
    
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_height="match_parent">


            <TextView
                android:text="Reservation Time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:textStyle="bold"
                android:textColor="@color/endBlue" />
            <TextView
                android:id="@+id/ReservationTime"
                android:text="00:00:00"
                android:padding="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="30dp"
                android:textStyle="bold"
                android:textColor="@color/colorPrimary"
                />
            <Button
                android:id="@+id/cancelReservation"
                android:layout_marginTop="10dp"
                android:text="Cancel"
                android:layout_gravity="bottom|center"
                android:layout_width="wrap_content"
                android:textColor="@color/white"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:padding="10dp"
                android:textStyle="bold"
                android:background="@drawable/register_button"
                />
        </LinearLayout>


    </android.support.v7.widget.CardView>

</LinearLayout>
